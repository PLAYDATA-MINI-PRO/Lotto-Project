<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lotto.dao.WinningNumberMapper">
        <!-- 로또 번호 조회 -->
        <select id="getLottoNumbersByDrawDate" parameterType="java.util.Map" resultType="WinningNumber">
                SELECT * FROM lottoNumber WHERE draw_date = #{drawDate}
        </select>

        <!-- 로또 번호 입력 -->
        <insert id="insertLottoNumbers" parameterType="WinningNumber">
                INSERT INTO lottoNumber (email, lotto_numbers, draw_date) VALUES (#{email}, #{lotto_numbers}, #{draw_date})
        </insert>

</mapper>


